<div class="row">
    <div class="col">
        <div class="text-center">
            <h2>{{{campusName}}} 
                <span class="float-right">
                    <a href="javascript:void(0);" id="changeCampus" 
                       title="{{#str}}change_campus, local_roomsupport{{/str}}"
                       class="btn btn-outline-primary">{{#str}}change_campus, local_roomsupport{{/str}}
                    </a>

                </span>
            </h2>
        </div>
        <div id="changeCampusSelectContainer"class="form-group">
            <label for="campusId">{{#str}}view_campus, local_roomsupport{{/str}}</label>
            <select class="form-control" id="campusId">
                {{#campuses}}
                <option value="{{{id}}}" {{#selected}}selected{{/selected}}>{{{name}}}</option>
                {{/campuses}}
            </select>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card mt-2">
            <div class="card-header">
                <h3>
                    {{#str}}buildings, local_roomsupport{{/str}}
                    <span class="float-right">
                        <a href="admin/building.php?id=0&campusid={{{campusId}}}" id="addBuilding"
                           title="{{#str}}add_building, local_roomsupport{{/str}}"
                           class="btn btn-outline-primary">{{#str}}add_building, local_roomsupport{{/str}}
                        </a>
                    </span>
                </h3>
            </div>
            <div class="card-body">
                {{> local_roomsupport/buildings}}
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card mt-2">
            <div class="card-header">
                <h3>
                    {{#str}}unassigned_devices, local_roomsupport{{/str}}

                </h3>
            </div>
            <div class="card-body">
                {{> local_roomsupport/unassigned_devices}}
            </div>
        </div>
    </div>
</div>
{{> local_roomsupport/delete_modal }}
