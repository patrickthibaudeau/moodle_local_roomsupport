<div class="modal fade" id="editModal" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">{{#str}}edit, local_roomsupport{{/str}} <span id="edit-name"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">                        
                        <div id="edit-content">
                            <form id="editPiForm">
                                <input type="hidden" name="id" id="piId" value="">
                                <div class="form-group">
                                    <label for="buildingId">{{#str}}assign_to_building, local_roomsupport{{/str}}</label>
                                    <select id="buildingId" name="buildingid" class="form-control">
                                        {{#buildings}}
                                        <option value="{{{id}}}">{{{fullName}}}</option>
                                        {{/buildings}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="roomId">{{#str}}assign_to_room, local_roomsupport{{/str}}</label><br>
                                    <select id="roomId" name="roomid" class="form-control">
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="faqId">{{#str}}associated_faq, local_roomsupport{{/str}}</label><br>
                                    <select class="form-control" id="faqId" name="faqid">
                                        {{#faqs}}
                                        <option value="{{id}}">{{name}}</option>
                                        {{/faqs}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="ignoreDevice">{{#str}}ignore_device, local_roomsupport{{/str}}</label><br>
                                    <select class="form-control" id="ignoreDevice" name="ignoredevice">                                        
                                        <option value="0" {{{ignore-no}}}>{{#str}}no{{/str}}</option>
                                        <option value="1" {{{ignore-yes}}}>{{#str}}yes{{/str}}</option>
                                    </select>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" id="savePiBtn">{{#str}}save, local_roomsupport{{/str}}</button>
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div> 